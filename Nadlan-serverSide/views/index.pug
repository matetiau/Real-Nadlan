main
  .contai#all
    // Nav-Bar
    .up
      nav.navbar.navbar-inverse
        .container-fluid
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/')
              img(alt='Brand', src='/images/logo.jpg', style='height: 50px;')
              div
          #myNavbar.collapse.navbar-collapse
            ul.nav.navbar-nav.nav-tabs(role='tablist')
              li
                .dropdown
                  button#dropdownMenu1.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
                    | פרסומים
                    span.caret
                  ul.dropdown-menu(aria-labelledby='dropdownMenu1')
                    li
                      a(href='/api/houses/spec/rent') השכרה
                    li
                      a(href='/api/houses/spec/sale') מכירה
              li
                
                  button.btn.btn-default( type='button', data-toggle='modal', data-target='.bs-example-modal-sm')
                    a.heshbon(href='users/register')
                      if user
                         p #{user.name}
                         
                         a(href='/logout') יציאה ממערכת
                      else
                         | כניסה לחשבון/הרשמה
                         
              li
                button.btn.btn-default(type='button', style='background-color: #0FB654;') 
                  if user
                    a(href='/api/houses/specta/add' style="color:#ffffff;") פרסום מודעה
                  else
                    a(href='/users/register' style="color:#ffffff;") פרסום מודעה
                    
      // - carousel -
      #catalog-slider.carousel.slide(data-ride='carousel')
        // - indicators dot nov -
        // - wrapper slides -
        .carousel-inner(role='listbox')
          .item.active
                img(src= superList[0].houseImages[0], alt='front', style='height: 75vh; width: 100%;')
                .carousel-caption(style="font-size:20px; background:rgba(0, 0, 0, 0.25);")=superList[0].price
                 
          - var values = superList.slice(1,superList.length);
              each val in values
                .item
                  img(src = val.houseImages[0] , alt='back', style='height: 75vh; width: 100%;')
                  .carousel-caption(style="font-size:20px; background:rgba(0, 0, 0, 0.25);")=val.price + val.types
              
      a.left.carousel-control(href='#catalog-slider', role='button', data-slide='next')
        span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
        span.sr-only Previous
      a.right.carousel-control(href='#catalog-slider', role='button', data-slide='prev')
        span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
        span.sr-only Previous
    // navbar down
    .nav-bar-down
      form.navbar-form.navbar-right(role='search')
        .dropdown
          button#dropdownMenu1.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
            | למכירה
            span.caret
          ul.dropdown-menu(aria-labelledby='dropdownMenu1')
            li
              a(href='#') להשכרה
            li
              a(href='#') למכירה
        .dropdown
          button#dropdownMenu1.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
            | סוג נכס
            span.caret
          ul.dropdown-menu(aria-labelledby='dropdownMenu1')
            li
              a(href='#') דירה
            li
              a(href='#') בית פרטי
            li
              a(href='#') קרקע
        .form-group
          input.form-control(type='text', placeholder='שכונה כתובת כדומה', style='width: 85%;')
          a.btn.btn-default.search-btn(href='#', role='button') חפש
    h2(style='width: 100%; text-align: center;') פרסומים מקודמים היום
    .new
      - var values = list;
        each val in values
                
                .desc(style='background-image:url('+JSON.stringify(val.houseImages[0])+'); padding:0;') 
                    a.house-link(href='/api/houses/' + val.id, style='width:100%; height:100%;' ) 
                            ul.list-group(style='color:aliceblue; list-style: none; background:rgba(0, 0, 0, 0.25);')
                                li=val.types
                                li=val.price
                                
    h2(style='width: 100%; text-align: center;') אופציות נוספות
    .more
